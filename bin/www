#!/usr/bin/env node

const app = require('../app');
const http = require('http');

const port = process.env.PORT || 3000;

app.set('port', port);

const server = http.createServer(app);

const url = process.env.APP_URL.split(':')[0];

server.listen(port);
server.on('listening', () => {
    console.log(`Express server running on ${url}:${port}`);
});
