<table class="table-auto w-auto mr-auto ml-auto border border-solid border-gray-200 border-collapse">
    <tr>
        <th class="text-left pl-5 text-lg w-72 border border-solid border-gray-200 border-collapse">
            Name
        </th>
        <th class="w-48 h-8 border">

        </th>
    </tr>

    <tbody>
    <!--
        If theyre an admin, show a dropdown of each section so they can view that specific section, otherwise show their own set as an instructor
    -->
    <% for (const student of students) { %>
        <tr>
            <% if (student.id !== user.id) { %>
                <td class="text-left pl-5 border bg-inherit border-gray-200"><%= student.name %></td>
                <td class="flex justify-center border-b border-gray-200">
                    <a class="my-2.5 bg-red-500 hover:bg-red-400 text-white text-center font-semibold py-1.5 px-4 hover:border-red-500 rounded"
                       href="<%= "/delete/" + student.id %>">Remove</a>
                </td>
            <% } %>
        </tr>
    <% } %>
    </tbody>
</table>
