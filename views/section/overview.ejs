<div class="text-3xl font-bold pb-8 dark:text-white">
    Section
    <p class="text-2xl font-normal">
        <%= sectionName %>
    </p>
</div>

<div class="w-1/2 m-auto ">
    <table id="user_table" class="stripe dark:text-black">
        <thead>
        <tr>
            <th class="dark:text-white">
                Name
            </th>
            <th class="dark:text-white">
                Action
            </th>
        </tr>
        </thead>

        <tbody >
        <!--
            TODO: If theyre an admin, show a dropdown of each section so they can view that specific section, otherwise show their own set as an instructor
        -->
        <% for (const student of students) { %>
            <% if (student.id !== user.id) { %>
                <tr>
                    <td>
                        <a class="hover:bg-red-300 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-opacity-50" href="<%= "/update/" + student.id %>"> <%= student.name %> </a>
                    </td>
                    <td class="flex justify-center">
                        <% if (sectionId === 1) { %>
                            <i>Cannot remove students from Pending section</i>
                        <% } else { %>
                            <a class="bg-red-500 hover:bg-red-400 text-white text-center font-semibold py-1.5 px-4 hover:border-red-500 rounded"
                               href="<%= "/delete/" + student.id %>">
                                Remove
                            </a>
                        <% } %>
                    </td>
                </tr>
            <% } %>
        <% } %>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(() => {
        $('#user_table').DataTable({
            lengthChange: false,
            columnDefs: [
                {
                    searchable: false,
                    sortable: false,
                    targets: 1
                },
            ],
        });
    });
</script>
